<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ee203F9F"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zhy.autolayout.AutoLinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/bt_close"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/live_china_delect_channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="切换栏目"
                    android:textSize="50px"
                    android:textColor="#fafdfa"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <Button
                    android:id="@+id/bt_bianji"
                    android:text="编辑"
                    android:textSize="40px"
                    android:background="#eefbfbfc"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.jiyun.qcloud.dashixummoban.ui.China.MyGridLayout
                android:id="@+id/grid"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                />


            <TextView
                android:text="点击添加更多栏目"
                android:textSize="50px"
                android:textColor="#fafdfa"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <com.jiyun.qcloud.dashixummoban.ui.China.MyGridLayout
                android:id="@+id/grid2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                />
        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>